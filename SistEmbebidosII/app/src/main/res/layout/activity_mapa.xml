<fragment
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:name="com.google.android.gms.maps.MapFragment"
    tools:context=".MapActivity"
    android:id="@+id/map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    map:cameraTargetLat="25.7737252"
    map:cameraTargetLng="-100.241"
    map:cameraTilt="30"
    map:cameraZoom="3"
    map:mapType="normal"
    map:uiCompass="false"
    map:uiRotateGestures="false"
    map:uiScrollGestures="true"
    map:uiTiltGestures="false"
    map:uiZoomControls="true"
    >

    <Button
        android:id="@+id/btnCancelar"
        android:layout_gravity="top|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:text="@string/button_cancelar"
        android:visibility="invisible"
        android:background="@color/common_signin_btn_default_background"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/nombreLugar"
            android:hint="@string/txt_nombreLugar"
            android:layout_gravity="left"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="40dp"
            android:visibility="invisible"
            android:background="@color/highlighted_text_material_dark"
            />

        <Button
            android:id="@+id/botonAceptar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:text="@string/button_aceptar"
            android:layout_marginBottom="40dp"
            android:layout_marginRight="40dp"
            android:layout_weight="2"
            android:visibility="invisible"
            android:background="@color/highlighted_text_material_light"/>
    </LinearLayout>
</fragment>